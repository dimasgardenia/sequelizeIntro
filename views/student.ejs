<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Student</title>
  </head>
  <body>
    <table border="1">
      <% if(err){ %>
         <%= err %>
        <% } %>
      <tr>
        <th> ID </th>
        <th> First Name </th>
        <th> Last Name </th>
        <th> Email </th>
      </tr>
      <% data.forEach(d=>{ %>
        <tr>
          <td>
            <%= d.id %>
          </td>
          <td>
            <%= d.first_name %>
          </td>
          <td>
            <%= d.last_name %>
          </td>
          <td>
            <%= d.email %>
          </td>
          <td><a href="/student/edit/<%= d.id %>"><button type="button" name="button">Edit</button></a></td>
          <td><a href="/student/delete/<%= d.id %>"><button type="button" name="button">Delete</button></a></td>
        </tr>
        <% }) %>
    </table>
    <br>
    <left>
    <form action="/student" method="post">
      <label>First Name</label>
      <input type="text" name="first_name" placeholder="please input your first name">
      <label>Last Name</label>
      <input type="text" name="last_name" placeholder="please input your last name">
      <label>Email</label>
      <input type="text" name="email" placeholder="please input your email">
      <br>
      <button type="submit" name="submit">Submit</button>
    </form>
    <left>
  </body>
</html>
