<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title> teacher </title>
  </head>
  <body>
    <table border="1">
      <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>email</th>
        <th>subject name</th>
      </tr>
      <% data.forEach(d =>{ %>
        <tr>
          <td><%= d.id %></td>
          <td><%= d.first_name %></td>
          <td><%= d.last_name %></td>
          <td><%= d.email %></td>
          <% if(d.SubjectId == null){ %>
            <td>unassigned</td>
            <% } else { %>
          <td><%= d.Subject.subject_name %></td>
            <% } %>
            <td><a href="/teacher/edit/<%= d.id %>"><button type="button" name="button">Edit</button></a></td>
            <td><a href="/teacher/delete/<%= d.id %>"><button type="button" name="button">Delete</button></a></td>
        </tr>
        <% }) %>
    </table>
    <br>
    <br>
    <a href ='/teacher/add'><button type="button" name="button">add teacher</button></a>
  </body>
</html>
